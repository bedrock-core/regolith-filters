{
  "$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.4.json",
  "author": "DrAv0011",
  "name": "starter-example",
  "description": "Start example reference for @bedrock-core regolith-filters",
  "packs": {
    "behaviorPack": "./packs/BP",
    "resourcePack": "./packs/RP"
  },
  "regolith": {
    "dataPath": "./packs/data",
    "formatVersion": "1.4.0",
    "filterDefinitions": {
      "generator": {
        "url": "github.com/@bedrock-core/regolith-filters",
        "version": "1.0.0"
      },
      "bundler": {
        "url": "github.com/@bedrock-core/regolith-filters",
        "version": "1.0.1"
      }
    },
    "profiles": {
      "default": {
        "export": {
          "readOnly": false,
          "target": "development",
          "build": "standard"
        },
        "filters": [
          {
            "filter": "generator",
            "settings": {
              "include": [
                "**/*.ts"
              ],
              "exclude": [
                "BP/scripts/**",
                "**/*.d.ts"
              ],
              "pretty": true
            }
          },
          {
            "filter": "bundler",
            "settings": {
              "debug": true
            }
          }
        ]
      }
    }
  }
}